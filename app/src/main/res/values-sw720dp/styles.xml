<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- This theme has no action bar. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- for screen width OVER 720dp, layout_width will not be match_parent-->
    <!-- used for linear layout in activity_search.xml-->
    <style name="CenteredSearchLayout">
        <item name="android:layout_width">500dp</item>
    </style>

    <!--used for cardViews in activity_profile-->
    <style name="CenteredCardViewLayout">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:layout_marginTop">33dp</item>
    </style>
</resources>
